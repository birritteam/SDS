@model IEnumerable<SDS_SanadDistributedSystem.Models.family>

@{
    ViewBag.Title = "العائلات المسجلة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>كافة العائلات المسجلة</h2>

<p>
    @if (User.IsInRole("receptionist"))
    {
        @Html.ActionLink("إضافة عائلة جديدة", "Create")<br />
        @Html.ActionLink("إضافة شخص ببيانات غير مكتملة", "Create", "temporals")
    }
   



    @using (Html.BeginForm())
    {
    <p>
        <div class="md-form">
            @Html.Editor("familyID", "", new { htmlAttributes = new { @class = "form-control", @placeholder = "البحث حسب رقم دفتر العائلة" } })
        </div>
        <div class="md-form">
            @Html.Editor("LastName", "", new { htmlAttributes = new { @class = "form-control", @placeholder = "البحث حسب الاسم الأخير" } })
        </div>
        <input type="submit" value="بحث" class="btn btn-default" />
    </p>
    }

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idfamily)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.familynature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personcount)
            </th>
            <th>
                عدد الأفراد المسجلين
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.lastaddress)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.currentaddress)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.displacementdate)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone1owner)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.phone2)
            </th>     
            <th>
                @Html.DisplayNameFor(model => model.phone2owner)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.note)
            </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.AspNetUser.Email)
                </th>*@
            <th>

            </th>
            @*<th></th>*@
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idfamily)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.familynature)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.personcount)
                </td>
                <td>
                    @item.people.Count()
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.lastaddress)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.currentaddress)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.displacementdate)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.phone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone1owner)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.phone2)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.phone2owner)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.note)
                </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    </td>*@
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.idfamily }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.idfamily }) 
                   @* @Html.ActionLink("حذف", "Delete", new { id = item.idfamily })*@
                    @if (User.IsInRole("receptionist"))
                    {
                       @Html.ActionLink("إضافة شخص", "Create", "people", new { id = item.idfamily }, "")
                    }


                </td>
                @*<td>
                   <a href="/people/Create/@item.idfamily">إضافة شخص</a>
                </td>*@
            </tr>
        }

    </table>
