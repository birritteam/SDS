@model SDS_SanadDistributedSystem.Models.temporal

@{
    ViewBag.Title = "استمارة بيانات غير مكتملة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span style="position:fixed; bottom: 20px; left: 90px; z-index:99;">
    @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-primary btn-rounded p-3 fa fa-list wow fadeInUp", @title = "عودة إلى القائمة السابقة" })
</span>
<div class="card card-cascade">

    <!--Card image-->
    <div class="view card-header dark-blue-bg white-text">
        <h3 class="h3-responsive card-header-content">استمارة بيانات غير مكتملة 
        @if (Model.servicestate.Equals("Closed")) {
<span class="text-success"> (مغلقة)</span>
        }
        else if (Model.servicestate.Equals("In prgress"))
        {
            <span class="text-warning"> (تم الاستكمال)</span>
        }
        
        </h3>
        <p class="card-header-content sub-header h4-responsive">@Model.idperson</p>
    </div>
    <!--/Card image-->
    <!--Card content-->
    <div class="card-body text-center">

        <p class="card-text card-block">

            <div class="row">
                <div class="col-md-9">
                    <h5 class="card-title"><i class="fa fa-user-o" style="color:#ff8800"></i>   معلومات شخصية</h5>
                    <hr />
                    <div class="row">

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.fname)
                            @Html.DisplayFor(model => model.fname)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.lname)
                            @Html.DisplayFor(model => model.lname)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.fathername)
                            @Html.DisplayFor(model => model.fathername)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.mothername)
                            @Html.DisplayFor(model => model.mothername)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.gender)
                            @Html.DisplayFor(model => model.gender)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.nationality)
                            @Html.DisplayFor(model => model.nationality)
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.birthday)
                            @Html.DisplayFor(model => model.birthday)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.birthplace)
                            @Html.DisplayFor(model => model.birthplace)
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.martial)
                            @Html.DisplayFor(model => model.martial)
                        </div>



                    </div>
                </div>
                <div class="col-md-3">
                    <h5 class="card-title"> <i class="fa fa-phone" style="color:#ff8800"></i>   معلومات تواصل</h5>
                    <hr />
                    <div class="row">

                        <div class="col-md-12">
                            @Html.LabelFor(model => model.currentaddress)
                            @Html.DisplayFor(model => model.currentaddress)
                        </div>
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.phone1)
                            @Html.DisplayFor(model => model.phone1)
                        </div>
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.phone2)
                            @Html.DisplayFor(model => model.phone2)
                        </div>
                    </div>
                </div>
            </div>
            @*<hr />*@
            <div class="row">

                <div class="col-md-3">
                    <h5 class="card-title"><i class="fa fa-graduation-cap" style="color:#ff8800"></i>    التعليم والعمل   </h5>
                    <hr />
                    <div class="row">

                        <div class="col-md-12">
                            @Html.LabelFor(model => model.education)
                            @Html.DisplayFor(model => model.education)
                        </div>
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.educationstate)
                            @Html.DisplayFor(model => model.educationstate)
                        </div>

                        <div class="col-md-12">
                            <label>العمل الحالي</label>
                            @ViewBag.selectedCurrentWork
                        </div>
                        <div class="col-md-12">
                            <label>العمل السابق</label>
                            @ViewBag.selectedPreviousWork
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <h5 class="card-title"><i class="fa fa-info" style="color:#ff8800"></i>    معلومات التسجيل</h5>
                    <hr />
                    <div class="row">



                        <div class="col-md-6">
                            @Html.LabelFor(model => model.tempregistrationdate)
                            @Html.DisplayFor(model => model.tempregistrationdate)
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.relationtype)
                            @Html.DisplayFor(model => model.relationtype)
                        </div>
                    </div>


                </div>
                <div class="col-md-3">
                    <h5><i class="fa fa-sticky-note-o" style="color:#ff8800"></i>     ملاحظات  </h5>
                    <hr />
                    @if (Model.note == null)
                    {
                        <text>لا يوجد ملاحظات</text>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.note)
                    }

                </div>

            </div>
            @*<hr />*@

            <div class="row">



            </div>




        </p>

        <div class="row">

        </div>
@if (Model.servicestate.Equals("Pending"))
{
        <div class="row">

            <p class="card-footer">

                

                    <a class="btn btn-warning btn-rounded p-1" href='@Url.Action("Edit", "temporals",new { id=Model.idperson})'><i class="fa fa-edit"></i>    تعديل  </a>
                    @*@Html.ActionLink(" ", "Edit", new { id = Model.idperson }, new { @class = "btn btn-warning btn-rounded fa fa-edit p-1" , @title = "تعديل بيانات الاستمارة" })*@
                

            </p>

        </div>

}
@if (Model.servicestate.Equals("In prgress"))
{
    <div class="row">

        <p class="card-footer">



            <a class="btn btn-warning btn-rounded p-1" href='@Url.Action("Edit", "temporals",new { id=Model.idperson})'><i class="fa fa-edit"></i>    تعديل  </a>
            @*@Html.ActionLink(" ", "Edit", new { id = Model.idperson }, new { @class = "btn btn-warning btn-rounded fa fa-edit p-1" , @title = "تعديل بيانات الاستمارة" })*@


        </p>

    </div>

}
        @*<a class="btn btn-deep-orange" style="padding:10px; margin:10px;">Go somewhere</a>*@
    </div>
</div>



