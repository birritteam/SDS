@model SDS_SanadDistributedSystem.Models.centerservice

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تعديل الخدمة</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>الخدمة</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.start_date)

        <div class="form-group">
            @Html.LabelFor(model => model.idcenter_FK, "المركز", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idcenter_FK, (SelectList)ViewBag.idcenter_FK, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idcenter_FK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idservice_FK, "الخدمة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idservice_FK, (SelectList)ViewBag.idservice_FK, htmlAttributes: new { @class = "form-control", id = "myDropdown" })
                @Html.ValidationMessageFor(model => model.idservice_FK, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.enabled, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.enabled)
                        @Html.ValidationMessageFor(model => model.enabled, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.enabled, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (bool item in ViewBag.enableOptions)
                {
                    if (item == true)
                    {
                        if (Model.enabled == false)
                        {
                            @Html.RadioButtonFor(model => model.enabled, true, new { @id = item, @disabled = "disable" })/// @checked = "checked" })
                                                                                                                        @Html.Label(item.ToString(), "تفعيل", new { @for = item })
                        }
                        if (Model.enabled == true)
                        {
                            @Html.RadioButtonFor(model => model.enabled, true, new { @id = item })/// @checked = "checked" })
                                                                                                @Html.Label(item.ToString(), "تفعيل", new { @for = item })
                        }
                    }
                    if (item == false)
                    {
                        if (Model.enabled == false)
                        {
                            @Html.RadioButtonFor(model => model.enabled, false, new { @id = item, @disabled = "disable" })
                            @Html.Label(item.ToString(), "إلغاء تفعيل", new { @for = item })
                        }
                        if (Model.enabled == true)
                        {
                            @Html.RadioButtonFor(model => model.enabled, false, new { @id = item })
                            @Html.Label(item.ToString(), "إلغاء تفعيل", new { @for = item })
                        }

                    }
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.location, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.start_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.end_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة إلى القائمة", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
